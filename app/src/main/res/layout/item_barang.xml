<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Nama Barang -->
        <TextView
            android:id="@+id/textNamaBarang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Laptop ASUS"
            android:textColor="#2196F3"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Kode dan Stok -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/textKodeBarang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C001"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textStok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="#666666"
                android:textSize="14sp"
                android:drawablePadding="4dp" />

        </LinearLayout>

        <!-- Informasi Detail -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp"
            android:background="#F8F9FA"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/textLokasi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lab Komputer"
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textJurusan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="RPL"
                    android:textColor="#333333"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/textMerk"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ASUS"
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textSumberDana"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dana BOS"
                    android:textColor="#333333"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textTahun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2022"
                android:textColor="#333333"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Deskripsi -->
        <TextView
            android:id="@+id/textDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Laptop untuk pembelajaran siswa"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_marginBottom="8dp" />

        <!-- Harga -->
        <TextView
            android:id="@+id/textHarga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp 8.500.000"
            android:textColor="#E91E63"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Tombol Edit dan Delete -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EDIT"
                android:textColor="#2196F3"
                android:background="@android:color/transparent"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#DDDDDD" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DELETE"
                android:textColor="#F44336"
                android:background="@android:color/transparent"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>