<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f8f9fa"
    android:gravity="center_horizontal"
    android:padding="16dp">

    <!-- Title Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#0d6efd"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Riwayat Peminjaman"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>

    <!-- Filters -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:padding="8dp"
        android:background="#ffffff"
        android:elevation="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textColor="#000000"
                android:textSize="14sp"
                android:paddingEnd="4dp" />

            <Spinner
                android:id="@+id/spinnerStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jurusan"
                android:textColor="#000000"
                android:textSize="14sp"
                android:paddingEnd="4dp" />

            <Spinner
                android:id="@+id/spinnerJurusan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kelas"
                android:textColor="#000000"
                android:textSize="14sp"
                android:paddingEnd="4dp" />

            <Spinner
                android:id="@+id/spinnerKelas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:spinnerMode="dropdown" />
        </LinearLayout>
    </LinearLayout>

    <!-- Name Search -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#ffffff"
        android:elevation="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cari Nama"
            android:textColor="#000000"
            android:textSize="14sp"
            android:paddingEnd="8dp" />

        <EditText
            android:id="@+id/editTextSearchName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Ketik nama siswa..."
            android:inputType="text"
            android:background="@android:drawable/editbox_background" />
    </LinearLayout>
    <!-- Table Header -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"
        android:background="#0d6efd"
        android:padding="8dp"
        android:layout_marginBottom="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="No"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Foto Profile"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Nama Murid"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Kelas"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Barang/Jumlah"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Tujuan"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Tanggal / Jam"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Kondisi Pengembalian"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Dikembalikan Oleh"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Photo"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Aksi"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- RecyclerView for borrowing history -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewRiwayat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:orientation="vertical" />
    </HorizontalScrollView>
</LinearLayout>
